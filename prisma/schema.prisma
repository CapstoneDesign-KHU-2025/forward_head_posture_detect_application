datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PostureSample {
  id          BigInt   @id @default(autoincrement())
  userId      String   @db.Text
  ts          DateTime @db.Timestamptz(6)
  angleDeg    Float
  isTurtle    Boolean
  hasPose     Boolean  @default(true)
  sessionId   BigInt?
  sampleGapS  Float?

  @@index([userId, ts])
}
